<h1>用户</h1>

<table>
  <tr>
    <th>编号</th>
    <th>用户名</th>
    <th>邮箱</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.id%></td>
    <td><%= user.username%></td>
    <td><%= user.email%></td>
    <td><%= link_to '查看', user %></td>
    <td><%= link_to '编辑', edit_user_path(user) %></td>
    <td><%= link_to '删除', user, confirm: '确定要删除吗？', method: :delete %></td>
  </tr>
<% end %>
</table>

