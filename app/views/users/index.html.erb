<h1>用户</h1>

<table>
  <tr>
    <th>编号</th>
    <th>用户名</th>
    <th>邮箱</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.id%></td>
    <td><%= user.username%></td>
    <td><%= user.email%></td>
    <td><%= link_to t('show'), user %></td>
    <td><%= link_to t('edit'), edit_user_path(user) %></td>
    <td><%= link_to t('destroy'), user, confirm: t('msg_confirm'), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('create_new'), new_user_path %>
